@page "/"
@using BlackWatch.WebApp.Features.Api
@inject IApiClient _api

@if (_tallySources == null)
{
    <p><em>Loading...</em></p>
    return;
}

<h1>Black Watch</h1>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Code</th>
        <th>Interval</th>
        <th>Version</th>
        <th>Date Modified</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var t in _tallySources)
    {
        <tr>
            <td>@t.Id</td>
            <td>@t.Code</td>
            <td>@t.Interval</td>
            <td>@t.Version</td>
            <td>@t.DateModified</td>
            <td>
                <a href="/edit/@t.Id"><span class="oi oi-pencil"></span></a>
            </td>
        </tr>
    }
    </tbody>
</table>

@code {
    private IReadOnlyCollection<TallySource>? _tallySources;

    protected override async Task OnInitializedAsync()
    {
        _tallySources = await _api.GetTallySourcesAsync();
    }
}